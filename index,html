<script>
    // Скролл вверх при обновлении страницы
    window.onbeforeunload = function () {
        window.scrollTo(0, 0);
    }

    // Дополнительный метод для браузеров, которые сохраняют позицию
    if (history.scrollRestoration) {
        history.scrollRestoration = 'manual';
    }

    // Функция для плавного появления элементов при прокрутке
    function reveal() {
        var reveals = document.querySelectorAll(".reveal");
        for (var i = 0; i < reveals.length; i++) {
            var windowHeight = window.innerHeight;
            var elementTop = reveals[i].getBoundingClientRect().top;
            var elementVisible = 150;
            if (elementTop < windowHeight - elementVisible) {
                reveals[i].classList.add("active");
            }
        }
    }

    window.addEventListener("scroll", reveal);

    // Запуск проверки при загрузке страницы
    window.onload = function() {
        window.scrollTo(0, 0); // Еще один принудительный скролл вверх при загрузке
        reveal();
    };
</script>

